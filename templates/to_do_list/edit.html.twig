{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Edit ToDoList{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12 p-3">
        <div class="container col-3 mt-3 text-center">
            <h1>Modifier la tâche "{{ to_do_list.libelle }}"</h1>
            <div class=" mx-auto my-5">
                {{ include('to_do_list/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
            <div class="status">
                <a href="{{ path('to_do_list_index') }}"><button class="btn btn-primary"><i class="fas fa-arrow-circle-left mr-2"></i>Retour à la liste</button></a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
